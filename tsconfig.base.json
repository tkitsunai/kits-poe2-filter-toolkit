{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["es6", "dom"],
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "composite": true,
    "moduleResolution": "node"
  },
  "include": ["packages/*/src"],
  "exclude": ["node_modules"]
}
